// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model SizeTable {
  id       Int    @id @default(autoincrement())
  title    String?
  shop     String?
  products Products[]
  image    String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

// Products is saved in db because we cant save String array. Need to refactor.
model Products {
  id            Int    @id @default(autoincrement())
  productId     String
  featuredMedia String
  url           String
  title         String
  table         SizeTable @relation(fields: [sizeTableId], references: [id])
  sizeTableId   Int
}
